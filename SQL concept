create table teacher with (id,name,sub,sal) and insert some values

create table teacher(id int primary key,name varchar(30),sub varchar(30),sal int); 

insert into teacher(id,name,sub,sal) values
(23,"ajay","math",50000),
(47,"bharat","english",60000),
(18,"chetan","chemistry",45000),
(9,"diya","physics",75000); 

select * from teacher;

Q1)select teacher whose sal is greater than 55000
select * from teacher where sal > 55000;

Q2)Rename the sal column of teacher table to ctc
alter table teacher change column sal ctc int;

Q3)Update sal of all teacher by giving them an increament of 25%
update teacher set ctc=ctc+(0.25)*ctc;

Q4)Add new column for teacher called city.The default city should be "gurgaon"
alter table teacher add column cities varchar(30) default "gurgaon";

Q5)Delete the salary column for teacher table
alter table teacher drop column ctc;
---------------------------------------------------------------------------------
create table stud with (rollno,name,city,marks) and insert some values

create table stud(rollno int primary key,name varchar(30),city varchar(30),marks int);

insert into stud(rollno,name,city,marks) values
(110,"adam","Delhi",76),
(108,"bob","Mumbai",65),
(124,"casey","Pune",94),
(112,"duke","Pune",80);

select * from stud;

Q1) select all student who scored 75+
select * from stud where marks >75;

Q2)Find names of all cities where student are from.
select distinct city from stud;

Q3)Find maximum marks of student from each city
select city,max(marks) from stud group by city;

Q4)Find the average of the class
select avg(marks) from stud;

Q5)Add a new column grade assign grade such as
marks >80,grade=O
marks 70-80,grade A
marks 60-70,grade B
alter table stud add column grade varchar(20);
update stud set grade='O' where marks>=80;
update stud set grade='A' where marks >70 and marks <80;
update stud set grade='B' where marks >60 and marks <70;
