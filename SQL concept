create table emp(empid int primary key,fname varchar(50),lname varchar(50),dep varchar(50),sal int,Hiredate date);

insert into emp(empid,fname,lname,dep,sal,Hiredate) values
(101,"Alice","Johnson","IT",6500,'2020-03-15'),
(102,"mark","Rivera","HR",4800,'2019-07-22'),
(103,"sophia","Lee","Finance",7200,'2021-01-10'),
(104,"daniel","Kim","IT",5100,'2018-11-05'),
(105,"Emma","Brown","marketing",5800,'2022-04-18'),
(106,"Liam","Patel","Finance",5300,'2020-09-29'),
(107,"Olivia","Garcia","HR",6900,'2017-06-30'),
(108,"Noah","Thompson","IT",4600,'2023-02-12'),
(109,"Ava","Martinez","marketing",7500,'2019-12-02'),
(110,"Ethan","Davis","Finance",8000,'2016-05-14');

Q1)Write a query to display every emp and their data 
select * from emp;

Q2)List only firstname, lastname and salary of every emp.
select fname,lname,sal from emp;

Q3)Show all emp who work in the 'IT' department.
select * from emp where dep='IT'; 

Q4)Retrieve emp with sal greater than 6000
select * from emp where sal > 6000;

Q5)List all emp order by HireDate from newest to oldest.
select * from emp order by Hiredate desc;

Q6)show a list of all unique dep present in table
select distinct dep from emp;

Q7)Find emp whose first name start with 'A'
select * from emp where fname like 'A%';

Q8)Show emp whose sal are between 4000 and 7000
select * from emp where sal between 4000 and 7000;

Q9)Find the average sal of all employees
select avg(sal) from emp;

Q10)list each dep along with no of emp but only include dep with more than 3 emp.
select dep,count(Empid) from emp group by dep having count(Empid) > 3;
